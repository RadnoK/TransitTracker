{
    "name": "radnok/transit-tracker",
    "type": "project",
    "license": "proprietary",
    "authors": [
        {
            "name": "Konrad Alfaro",
            "email": "alfaro.konrad@gmail.com",
            "homepage": "https://radnok.com/"
        }
    ],
    "require": {
        "php": "^7.2",

        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-json": "*",

        "prooph/service-bus-symfony-bundle": "^0.7",
        "ramsey/uuid": "^3.8",
        "symfony/console": "^4.1",
        "symfony/flex": "^1.1",
        "symfony/framework-bundle": "^4.1",
        "symfony/yaml": "^4.1",
        "thecodingmachine/safe": "^0.1.4",
        "webmozart/assert": "^1.2"
    },
    "require-dev": {
        "behat/behat": "^3.5",
        "friends-of-behat/context-service-extension": "^1.2",
        "friends-of-behat/cross-container-extension": "^1.1",
        "friends-of-behat/service-container-extension": "^1.0",
        "friends-of-behat/suite-settings-extension": "1.0",
        "friends-of-behat/symfony-extension": "^1.2",
        "phpspec/phpspec": "^5.0",
        "phpstan/phpstan": "^0.9",
        "phpstan/phpstan-strict-rules": "^0.9",
        "symfony/debug": "^4.0",
        "symfony/debug-pack": "^1.0",
        "symfony/dotenv": "^4.1",
        "symplify/easy-coding-standard": "^4.2"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "bin-dir": "bin",
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "TransitTracker\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\TransitTracker\\": "tests/",
            "spec\\TransitTracker\\": "spec/"
        }
    },
    "replace": {
        "paragonie/random_compat": "*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "fix": [
            "bin/ecs check --ansi --no-progress-bar bin spec src tests --fix"
        ],
        "analyse": [
            "bin/ecs check --ansi --no-progress-bar bin spec src tests",
            "bin/phpstan analyse --ansi --no-progress -c phpstan.neon -l 7 src tests"
        ],
        "test": [
            "bin/phpspec run --ansi",
            "bin/behat --strict --colors"
        ],
        "check": [
            "composer validate --strict --ansi",
            "@analyse",
            "@test"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.1.*"
        }
    }
}
